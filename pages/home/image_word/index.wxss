@import '/towxml/style/main.wxss';
.index-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index-content{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
}

.replace-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  border-radius: 10rpx;
  padding: 10rpx 0rpx;
}

.replace-str{
  width: 95%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx 0rpx;
}

.replace-input{
  width: 80%;
  background: gainsboro;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
}

.replace-target{
  width: 95%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx 0rpx;
}

.replace-label{
  width: 20%;
}

.target-input{
  width: 80%;
  background: gainsboro;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
}

.replace-data{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  border-radius: 10rpx;
  align-items: center;
}

.replace-txt{
  padding: 10rpx 10rpx;
  width: 95%;
  font-size: 30rpx;
}

.result-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  border-radius: 10rpx;
  align-items: center;
  margin-bottom: 50rpx;
  font-size: 30rpx;
}

.copy{
  margin-top: 30rpx;
  margin-bottom: 25rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.tip-info{
  font-size: 25rpx;
  color: darkgray;
}

.copy-btn{
  width: 150rpx;
  background: #3CC4A9;
  color: white;
  font-size: 30rpx;
  padding: 10rpx 10rpx;
  border-radius: 30rpx;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  text-align: center;
}

.count-result{
  width: 100%;
  display:flex;
  flex-direction: column;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}

.count-result-bottom{
  margin-top: 50rpx;
}

.r-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0rpx;
  width: 95%;
  font-size: 30rpx;
  align-items: center;
}

.r-item-top-bottom{
  width: 95%;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
}

.r-word-item-info{
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  width: 70rpx;
  align-items: center;
  font-size: 30rpx;
}

.count-result{
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  padding: 10rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-label{
  font-size: 35rpx;
  width: 95%;
}

.r-word{
  font-optical-sizing: 50rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.r-time{
  font-optical-sizing: 35rpx;
  color: #FF3030;
  font-size: 45rpx;
  padding: 0rpx 10rpx;
}